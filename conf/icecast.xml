<icecast>
      <location>YunoHost</location>
      <admin>icecast@__DOMAIN__</admin>
  
      <limits>
          <clients>64</clients>
          <sources>4</sources>
          <queue-size>524288</queue-size>
          <client-timeout>30</client-timeout>
          <header-timeout>15</header-timeout>
          <source-timeout>10</source-timeout>
          <burst-size>65535</burst-size>
      </limits>
  
      <authentication>
          <source-password>hackme</source-password>
          <relay-password>hackme</relay-password>
          <admin-user>__ADMIN__</admin-user>
          <admin-password>__PASSWORD__</admin-password>
      </authentication>
  
      <hostname>__DOMAIN__</hostname>
  
      <listen-socket>
          <port>__PORT__</port>
          <shoutcast-mount>/live.mp3</shoutcast-mount>
      </listen-socket>
  
      <fileserve>1</fileserve>
  
      <paths>
          <basedir>__INSTALL_DIR__</basedir>
          <logdir>/var/log/__APP__</logdir>
          <webroot>__INSTALL_DIR__/web</webroot>
          <adminroot>__INSTALL_DIR__/admin</adminroot>
          <!-- <alias source="/" dest="/index.html"/> -->
          <alias source="/" destination="/status.xsl"/>
      </paths>
  
      <logging>
          <accesslog>access.log</accesslog>
          <errorlog>error.log</errorlog>
          <loglevel>1</loglevel> <!-- 4 Debug, 3 Info, 2 Warn, 1 Error -->
          <logsize>10000</logsize> <!-- Max size of a logfile -->
       </logging>
  
      <security>
          <chroot>1</chroot>
          <changeowner>
              <user>__APP__</user>
              <group>__APP__</group>
          </changeowner>
      </security>
  </icecast>
